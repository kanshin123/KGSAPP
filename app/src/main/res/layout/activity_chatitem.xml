<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/layoutTo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgProfileTo"
            android:layout_width="40dp"
            android:layout_height="40dp" />


        <TextView
            android:id="@+id/textViewNicnameTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@+id/imgProfileTo"
            android:textColor="#101010" />

        <TextView
            android:id="@+id/textViewMsgTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewNicnameTo"
            android:layout_toRightOf="@+id/imgProfileTo"
            android:background="@drawable/message_in"
            android:minHeight="40dp"
            android:textColor="#101010" />

        <TextView
            android:id="@+id/textViewMsgTimeTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textViewMsgTo"
            android:layout_alignBottom="@+id/textViewMsgTo"
            android:paddingLeft="10dp"
            android:text="오후 10:11"
            android:textColor="#101010" />

    </RelativeLayout>
</LinearLayout>